{% extends '@layout/default.html.twig' %}

{% block title %}Blog{% endblock %}

{% block content %}
    <h1>Blog posts list</h1>
    <p class="lead">Connection database with Doctrine</p>
    <div class="row">

        {% for post in posts %}

            <div class="col-md-4">
                <h2>
                    <a href="/blog/view/{{ post.id }}">
                        <i class="fa fa-refresh"></i> {{ post.title }}
                    </a>
                </h2>
                <p>
                    {{ post.content }}
                </p>
            </div>
        {% endfor %}
    </div>

{% endblock %}